---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;

// on hover animate to display more cards behind primary one and display playing card animation
---

<div class="link-card list-none flex p-1 bg-secondary rounded-md">
	<div>
		<h2 class="text-3xl satoshi">
			{title}
		</h2>
		<p class="satoshi-light">
			{body}
		</p>
	</div>
</div>

<style>
	.link-card {
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > div {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
