---
interface Props {
    text: string;
}

const text = Astro.props.text;
---

<span class="text-gradient">{text}</span>

<style>
    .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>